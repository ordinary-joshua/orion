---
interface Props {
	name: string;
	title: string;
    headshot: string;
}

const { name, title, bio, headshot } = Astro.props;
---
<div class="team-member">
    <div class="headshot">
        <img src={ headshot } alt="">
    </div>
    <div class="inner">
        <h3>{ name }</h3>
        <p>{ title }</p>
        <div class="bio">
            <slot />
        </div>
    </div>
</div>

<style>
    .team-member
    {
        display: flex;
        flex-direction: row;
        gap:3rem;
        padding:5rem;

    }
    .team-member:not(:last-child)
    {
        border-bottom:1px solid var(--border-color);
    }
    .team-member .inner
    {
        max-width: 40ch;
    }
    .headshot
    {
        max-width:120px;
        min-width: 80px;
    }
    .headshot img
    {
        aspect-ratio: 1/1;
        width:100%;
        background-color: white;
        object-fit: cover;
    }
    h3
    {
        margin-top:0;
    }
</style>