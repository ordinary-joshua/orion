---
interface Props {
    image: string;
}

const { title, image } = Astro.props;

const styleValue = `background-image:url('${image}');`;
---
<div class="project-hero" id="paralax" style={styleValue}>
	<div class="project-meta">
		<h1 class="mega animated" data-splitting>{ title }</h1>
	</div>
</div>

<style>
    .project-hero
    {
        position: relative;
        background: #000;
        background-repeat: no-repeat;
        background-size: cover;
        overflow: clip;
        background-position: center top;
        width:100%;
        height: 100svh;
        min-height: 650px;
        box-sizing: border-box;
    }
    .project-hero::after
    {
        content: "";
        position: absolute;
        top:0;
        right:0;
        bottom:0;
        left:0;
        background-color:#000;
        opacity: 0.5;
        z-index: 0;
    }
    .project-meta
    {
        position: absolute;
        z-index: 10;
        top:50%;
        padding:var(--outside-padding);
        transform: translateY(-50%);
    }
    .project-meta h1 
    {
        margin:0; 
        color:#FFF;
        
    }
</style>

<script>

    import { gsap } from "gsap";
        
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    
    
    gsap.registerPlugin(ScrollTrigger);
    
    gsap.to("#paralax", {
        backgroundPosition: "50% 100%",
        ease: "none",
        scrollTrigger: {
        trigger: "#paralax",
        start: "top",
        end: "bottom",
        scrub: true
        }
    });
    
    </script>
    