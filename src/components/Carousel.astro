---
interface Props {
	message: string;
}

const { message, items } = Astro.props;


---

<div class="carousel-container">
  <div class="carousel swiper-container" id="carousel">

    <div class="items swiper-wrapper" id="items">
    { items.map((item)=>( 

      <div class="item swiper-slide">
        <img src={item} />
      </div>
    )) }
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<style>

.carousel-container
{
  border-top:1px solid var(--border-color);
  border-bottom:1px solid var(--border-color);
  padding:5rem 5rem;
  user-select: none;
}

.item img
{ 
	pointer-events: none;
	width:100%;
	height: auto;
}

@media only screen and (max-width: 640px) {
  .carousel-container
  {
    padding:20px;
  }
}

@media only screen and (max-width: 768px) {
  .carousel-container
  {
    padding:30px;
  }
}

@media only screen and (max-width: 1024px) {
  .carousel-container
  {
    padding:40px;
  }
}

</style>

<script>
  import Swiper from 'swiper';
  import 'swiper/swiper-bundle.css';

  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.swiper-container', {
      // Your Swiper options here
      loop: true,
      slidesPerView: 1,
      spaceBetween: 40,
      grabCursor: true,
      freeMode: true,
      pagination: {
        el: ".swiper-pagination",
        type: "progressbar",
      },
      breakpoints: {
        640: {
          slidesPerView: 1,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 2,
          spaceBetween: 30,
        },
        1024: {
          slidesPerView: 3,
          spaceBetween: 40,
        },
      },
    });
  });

  

</script>